<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="ListItemName">
        <item name="android:textSize">17sp</item>
    </style>
    <style name="ListItemDistance" parent="@android:style/TextAppearance.Small" />

    <style name="OutletRatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:stepSize">1</item>
        <item name="android:scaleX">0.6</item>
        <item name="android:scaleY">0.6</item>
    </style>
</resources>
